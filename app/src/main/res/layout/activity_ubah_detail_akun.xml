<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F49F36"
    tools:context=".UbahDetailAkun">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <RelativeLayout
                android:id="@+id/profilatas"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/lazisprofil"
                    android:layout_width="109dp"
                    android:layout_height="69dp"
                    android:layout_marginVertical="3dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/lazismukabpekalonganicon" />

                <TextView
                    android:id="@+id/judulakun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="sans-serif"
                    android:text="EDIT AKUN"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="23dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/kembalieditakun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="23dp"
                    android:layout_marginRight="25dp"
                    android:src="@drawable/kembaliicondark" />

            </RelativeLayout>

            <TextView
                android:id="@+id/datadiripengguna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profilatas"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif"
                android:text="DATA AKUN"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/datadiripengguna"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:text="Email\t\t:"
                android:textColor="@color/white"/>

            <EditText
                android:id="@+id/txtemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/email"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/backgroundwhitenormal"
                android:hint="Masukkan Email"
                android:inputType="textPersonName"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp" />


            <TextView
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/updateemail"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:text="Password\t\t:"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/txtpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/password"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/backgroundwhitenormal"
                android:drawableRight="@drawable/visibility_off"
                android:hint="Masukkan Password"
                android:inputType="textPassword"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp" />

            <TextView
                android:id="@+id/ulangipassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtpassword"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:text="Ulangi Password \t\t:"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/txtulangipassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ulangipassword"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/backgroundwhitenormal"
                android:drawableRight="@drawable/visibility_off"
                android:hint="Masukkan Password"
                android:inputType="textPassword"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp" />

            <Button
                android:id="@+id/updateemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtemail"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:background="@drawable/backgroundwhite"
                android:text="UPDATE EMAIL"
                android:textColor="#DA8B03"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/updatepassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtulangipassword"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:background="@drawable/backgroundwhite"
                android:text="UPDATE KATA SANDI"
                android:textColor="#DA8B03"
                android:textSize="20dp"
                android:textStyle="bold" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>