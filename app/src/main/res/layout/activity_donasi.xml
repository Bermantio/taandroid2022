<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F49F36"
    tools:context=".Donasi">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

    <RelativeLayout
        android:id="@+id/donasiatas"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/kembalidonasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:src="@drawable/kembaliicondark" />

        <TextView
            android:id="@+id/juduldonasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="sans-serif"
            android:text="DONASI"
            android:textColor="@color/cardview_dark_background"
            android:textSize="23dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <TextView
        android:id="@+id/txtdonasizakat"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_below="@id/donasiatas"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/backgroundwhite"
        android:paddingLeft="10dp"
        android:paddingTop="30dp"
        android:text="ZAKAT"
        android:textColor="#F49F36"
        android:textSize="30dp"
        android:textStyle="bold" />

            <ImageView
                android:id="@+id/zakaticon"
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:layout_below="@id/donasiatas"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="68dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/zakaticon" />

    <ImageView
        android:id="@+id/infozakaticon"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@id/donasiatas"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="140dp"
        android:onClick="infozakat"
        android:src="@drawable/infoicondark" />

    <TextView
        android:id="@+id/txtdonasiinfaq"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_below="@id/txtdonasizakat"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/backgroundwhite"
        android:paddingLeft="10dp"
        android:paddingTop="30dp"
        android:text="INFAQ"
        android:textColor="@color/cardview_dark_background"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/infaqicon"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@id/txtdonasizakat"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="50dp"
        android:layout_marginTop="68dp"
        android:src="@drawable/infaqicon" />

    <ImageView
        android:id="@+id/infoinfaqicon"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@id/txtdonasizakat"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="140dp"
        android:onClick="infoinfaq"
        android:src="@drawable/infoicondark" />

    <TextView
        android:id="@+id/txtdonasishadaqah"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_below="@id/txtdonasiinfaq"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/backgroundwhite"
        android:paddingLeft="10dp"
        android:paddingTop="30dp"
        android:text="SHADAQAH"
        android:textColor="#7CAA3C"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/shadaqahicon"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/txtdonasiinfaq"
        android:layout_marginRight="40dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/shadaqahicon" />

    <ImageView
        android:id="@+id/infoshadaqahicon"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@id/txtdonasiinfaq"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="140dp"
        android:onClick="infoshadaqah"
        android:src="@drawable/infoicondark" />

        </RelativeLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomnavigator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_light_background"
        app:backgroundTint="@color/white"
        app:menu="@menu/menu"
        android:layout_alignParentBottom="true"/>



</RelativeLayout>