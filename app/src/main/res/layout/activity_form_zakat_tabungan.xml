<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F49F36"
    tools:context=".FormZakatTabungan">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <RelativeLayout
                android:id="@+id/zakattabunganatas"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/kembalizakattabungan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:src="@drawable/kembaliicondark" />

                <TextView
                    android:id="@+id/judulzakattabungan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="sans-serif"
                    android:text="TABUNGAN"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="23dp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <TextView
                android:id="@+id/datadirizakattabungan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtcarapembayaran"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:text="Data Penyetor"
                android:textColor="@color/cardview_light_background"
                android:textSize="23dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tanggaltransaksi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/datadirizakattabungan"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:text="Tanggal Transaksi\t\t:"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txttanggaltransaksi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tanggaltransaksi"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:text="@string/app_name"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/namalengkap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txttanggaltransaksi"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:text="Nama Lengkap\t\t:"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txtnamalengkap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/namalengkap"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/alamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtnamalengkap"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:text="Alamat\t\t:"
                android:textSize="15dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/txtalamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_below="@id/alamat"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/telepon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtalamat"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:text="Nomor Telepon/HP/WhatsApp \t\t:"
                android:textSize="15dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/txttelepon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_below="@id/telepon"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/profesi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txttelepon"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:text="Profesi \t\t:"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txtprofesi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profesi"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/program"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtprofesi"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:text="Program\t\t:"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txtprogram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/program"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:text="Zakat Tabungan"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/donasisebagai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtprogram"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:text="Donasi sebagai\t\t:"
                android:textColor="@color/black" />

            <Spinner
                android:id="@+id/pilihdonasisebagai"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_below="@id/donasisebagai"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/backgroundwhitenormal"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                tools:ignore="RtlHardcoded"></Spinner>

            <TextView
                android:id="@+id/berupa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pilihdonasisebagai"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:text="Berupa\t\t:"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txtberupa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/berupa"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:text="Uang"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/nominal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtberupa"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:text="Nominal\t\t:"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/txtnominal"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_below="@id/nominal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/backgroundwhitenormal"
                android:hint="Masukkan Nominal"
                android:inputType="text|number"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/uploadbukti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtnominal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:text="Upload Bukti Transaksi\t\t:"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/buktizakattabungan"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_below="@id/uploadbukti"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/backgroundwhitenormal"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:text="Tidak Ada Bukti Transaksi"
                android:textSize="15dp" />

            <Button
                android:id="@+id/confirmzakattabungan"
                android:layout_width="138dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/buktizakattabungan"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/backgroundwhite"
                android:text="KONFIRMASI"
                android:textColor="#DA8B03"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/batal"
                android:layout_width="138dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:layout_below="@id/buktizakattabungan"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/backgroundwhite"
                android:text="BATAL"
                android:textColor="#DA8B03"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/txtcarapembayaran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/zakattabunganatas"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:background="@drawable/backgroundorange"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:text="Silahkan transfer terlebih dahulu ke nomor rekening 7020 898 048 (BSI) atas nama BTM BLIGO. Untuk setiap transfer, mohon para pengirim menuiskan 'lazismu nama pengirim' di bagian berita atau keterangan. Setelah transfer isi form berikut"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>