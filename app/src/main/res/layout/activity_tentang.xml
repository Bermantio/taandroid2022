<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F49F36"
    tools:context=".Tentang">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/bottomnavigator">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <RelativeLayout
                android:id="@+id/tentangatas"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/kembalitentang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:src="@drawable/kembaliicondark" />

                <TextView
                    android:id="@+id/judultentang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="sans-serif"
                    android:text="TENTANG"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="23dp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <TextView
                android:id="@+id/txttentanglazismu"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_below="@id/tentangatas"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/backgroundwhite"
                android:paddingLeft="10dp"
                android:paddingTop="35dp"
                android:text="LAZISMU"
                android:textColor="#F49F36"
                android:textSize="25dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/lazismuicon"
                android:layout_width="109dp"
                android:layout_height="69dp"
                android:layout_below="@id/tentangatas"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="65dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/lazismuicon" />

            <TextView
                android:id="@+id/txttentangasnaf"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_below="@id/txttentanglazismu"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/backgroundwhite"
                android:paddingLeft="10dp"
                android:paddingTop="35dp"
                android:text="ASNAF"
                android:textColor="@color/cardview_dark_background"
                android:textSize="25dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/asnaficon"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_below="@id/txttentanglazismu"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="50dp"
                android:layout_marginTop="65dp"
                android:src="@drawable/kemanusiaanicon" />

            <TextView
                android:id="@+id/txttentangpembayaran"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_below="@id/txttentangasnaf"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/backgroundwhite"
                android:paddingLeft="10dp"
                android:paddingTop="35dp"
                android:text="PEMBAYARAN"
                android:textColor="#7CAA3C"
                android:textSize="25dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/pembayaranicon"
                android:layout_width="90dp"
                android:layout_height="75dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/txttentangasnaf"
                android:layout_marginRight="40dp"
                android:layout_marginTop="70dp"
                android:src="@drawable/pembayaranicon" />

        </RelativeLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomnavigator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_light_background"
        app:backgroundTint="@color/white"
        app:menu="@menu/menu"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>