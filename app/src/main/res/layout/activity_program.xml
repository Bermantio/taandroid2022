<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F49F36"
    tools:context=".Program">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/bottomnavigator">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

    <RelativeLayout
        android:id="@+id/programatas"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/kembaliprogram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/kembaliicondark" />

        <TextView
            android:id="@+id/judulprogram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="sans-serif"
            android:text="PROGRAM"
            android:textColor="@color/cardview_dark_background"
            android:textSize="23dp"
            android:textStyle="bold" />

    </RelativeLayout>

            <TextView
                android:id="@+id/txtprogrampendidikan"
                android:layout_width="350dp"
                android:layout_height="90dp"
                android:layout_below="@id/programatas"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/backgroundwhite"
                android:paddingLeft="10dp"
                android:paddingTop="30dp"
                android:text="PENDIDIKAN"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"/>

    <ImageView
        android:id="@+id/pendidikanicon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/programatas"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="73dp"
        android:layout_marginRight="53dp"
        android:background="@drawable/backgroundwhite"
        android:src="@drawable/pendidikanicon" />

    <TextView
        android:id="@+id/txtprogramkesehatan"
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:layout_below="@id/txtprogrampendidikan"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/backgroundwhite"
        android:paddingLeft="10dp"
        android:paddingTop="30dp"
        android:text="KESEHATAN"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/kesehatanicon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/txtprogrampendidikan"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="43dp"
        android:layout_marginRight="53dp"
        android:src="@drawable/kesehatanicon" />

    <TextView
        android:id="@+id/txtprogramekonomi"
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:layout_below="@id/txtprogramkesehatan"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/backgroundwhite"
        android:paddingLeft="10dp"
        android:paddingTop="30dp"
        android:text="EKONOMI"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ekonomiicon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/txtprogramkesehatan"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="43dp"
        android:layout_marginRight="53dp"
        android:background="@drawable/backgroundwhite"
        android:src="@drawable/ekonomiicon" />

    <TextView
        android:id="@+id/txtprogramkemanusiaan"
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:layout_below="@id/txtprogramekonomi"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/backgroundwhite"
        android:paddingLeft="10dp"
        android:paddingTop="30dp"
        android:text="KEMANUSIAAN"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/kemanusiaanicon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/txtprogramekonomi"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="43dp"
        android:layout_marginRight="53dp"
        android:src="@drawable/kemanusiaanicon" />

    <TextView
        android:id="@+id/txtprogramsosialdakwah"
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:layout_below="@id/txtprogramkemanusiaan"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/backgroundwhite"
        android:paddingLeft="10dp"
        android:paddingTop="30dp"
        android:text="SOSIAL DAKWAH"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/sosialdakwahicon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/txtprogramkemanusiaan"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="43dp"
        android:layout_marginRight="53dp"
        android:background="@drawable/backgroundwhite"
        android:src="@drawable/sosialdakwahicon" />

    <TextView
        android:id="@+id/txtprogramlingkungan"
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:layout_below="@id/txtprogramsosialdakwah"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/backgroundwhite"
        android:paddingLeft="10dp"
        android:paddingTop="30dp"
        android:text="LINGKUNGAN"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/lingkunganicon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/txtprogramsosialdakwah"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="43dp"
        android:layout_marginRight="53dp"
        android:src="@drawable/lingkunganicon" />

        </RelativeLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomnavigator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/cardview_light_background"
        app:backgroundTint="@color/white"
        app:menu="@menu/menu" />

</RelativeLayout>