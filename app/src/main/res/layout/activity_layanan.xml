<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F49F36"
    tools:context=".Layanan">

    <RelativeLayout
        android:id="@+id/layananatas"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/kembalilayanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:src="@drawable/kembaliicondark" />

        <TextView
            android:id="@+id/judullayanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="sans-serif"
            android:text="LAYANAN"
            android:textColor="@color/cardview_dark_background"
            android:textSize="23dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <TextView
        android:id="@+id/txtviatatapmuka"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_below="@id/layananatas"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/backgroundwhite"
        android:paddingLeft="10dp"
        android:paddingTop="30dp"
        android:text="TATAP MUKA"
        android:textColor="@color/cardview_dark_background"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/viatatapmukaicon"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/layananatas"
        android:layout_marginRight="50dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/faceicon" />

    <TextView
        android:id="@+id/txtviatelepon"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_below="@id/txtviatatapmuka"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/backgroundwhite"
        android:paddingLeft="10dp"
        android:paddingTop="30dp"
        android:text="TELEPON"
        android:textColor="#F49F36"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/teleponicon"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@id/txtviatatapmuka"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="50dp"
        android:layout_marginTop="68dp"
        android:src="@drawable/teleponicon" />

    <TextView
        android:id="@+id/txtviawhatsapp"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_below="@id/txtviatelepon"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/backgroundwhite"
        android:paddingLeft="10dp"
        android:paddingTop="30dp"
        android:text="WHATSAPP"
        android:textColor="#7CAA3C"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/whatsappicon"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/txtviatelepon"
        android:layout_marginRight="40dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/whatsappicon" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomnavigator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_light_background"
        app:backgroundTint="@color/white"
        app:menu="@menu/menu"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>