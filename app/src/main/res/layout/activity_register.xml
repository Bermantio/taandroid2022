<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <RelativeLayout
                android:id="@+id/pendaftaran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#DA8B03">

                <TextView
                    android:id="@+id/juduldaftar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:text="PENDAFTARAN"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="25dp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <TextView
                android:id="@+id/datadiripendaftar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pendaftaran"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="DATA DIRI"
                android:textColor="#DA8B03"
                android:textSize="25dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"/>

            <ImageView
                android:id="@+id/fotoprofil"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_below="@id/datadiripendaftar"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/profiliconorange" />

            <TextView
                android:id="@+id/namapengguna"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fotoprofil"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:text="Nama Pengguna\t\t:" />

            <EditText
                android:id="@+id/txtnamapengguna"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/namapengguna"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/kotakisi"
                android:hint="Masukkan Nama User"
                android:inputType="textPersonName"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp" />

            <TextView
                android:id="@+id/namalengkap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtnamapengguna"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:text="Nama Lengkap\t\t:" />

            <EditText
                android:id="@+id/txtnamalengkap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:layout_below="@id/namalengkap"
                android:layout_marginTop="15dp"
                android:background="@drawable/kotakisi"
                android:hint="Masukkan Nama Lengkap"
                android:inputType="textPersonName"/>

            <TextView
                android:id="@+id/jeniskelamin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtnamalengkap"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:text="Jenis Kelamin\t\t:" />

            <Spinner
                android:id="@+id/pilihjeniskelamin"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_below="@id/jeniskelamin"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/kotakisi"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                tools:ignore="RtlHardcoded"></Spinner>

            <TextView
                android:id="@+id/alamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pilihjeniskelamin"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:text="Alamat\t\t:" />

            <EditText
                android:id="@+id/txtalamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/alamat"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/kotakisi"
                android:hint="Masukkan Alamat"
                android:inputType="textPersonName"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp" />

            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtalamat"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:text="Email\t\t:" />

            <EditText
                android:id="@+id/txtemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/email"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/kotakisi"
                android:hint="Masukkan Email"
                android:inputType="textPersonName"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp" />

            <TextView
                android:id="@+id/telepon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtemail"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:text="Nomor Telepon/HP/WhatsApp\t\t:" />

            <EditText
                android:id="@+id/txttelepon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:layout_below="@id/telepon"
                android:layout_marginTop="15dp"
                android:background="@drawable/kotakisi"
                android:hint="Masukkan Nomor"
                android:inputType="text|number"/>

            <TextView
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txttelepon"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:text="Password \t\t:" />

            <EditText
                android:id="@+id/txtpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/password"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/kotakisi"
                android:drawableRight="@drawable/visibility_off"
                android:hint="Masukkan Password"
                android:inputType="textPassword"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp" />

            <TextView
                android:id="@+id/ulangipassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtpassword"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:text="Ulangi Password \t\t:" />

            <EditText
                android:id="@+id/txtulangipassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:drawableRight="@drawable/visibility_off"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:layout_below="@id/ulangipassword"
                android:layout_marginTop="15dp"
                android:background="@drawable/kotakisi"
                android:hint="Masukkan Password"
                android:inputType="textPassword"/>

            <TextView
                android:id="@+id/profesi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtulangipassword"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:text="Profesi \t\t:" />

            <EditText
                android:id="@+id/txtprofesi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profesi"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/kotakisi"
                android:hint="Masukkan Profesi"
                android:inputType="textPersonName"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp" />

            <Button
                android:id="@+id/daftar"
                android:layout_width="138dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_below="@id/txtprofesi"
                android:layout_marginVertical="20dp"
                android:background="@drawable/backgroundorange"
                android:text="DAFTAR"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/batal"
                android:layout_width="138dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:layout_below="@id/txtprofesi"
                android:background="@drawable/backgroundorange"
                android:text="BATAL"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/copyright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/daftar"
                android:layout_alignParentBottom="true"
                android:layout_marginVertical="10dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:layout_centerHorizontal="true"
                android:text="copyright"
                android:textColor="@color/cardview_dark_background"
                android:textSize="15dp" />


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>