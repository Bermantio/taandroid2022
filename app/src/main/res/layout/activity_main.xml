<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundorange2normal"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/berandaatas"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white">

        <ImageView
            android:layout_width="109dp"
            android:layout_height="69dp"
            android:layout_marginVertical="3dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/lazismukabpekalonganicon" />

        <ImageView
            android:id="@+id/kembalimenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/loginicon" />

    </RelativeLayout>

    <TextView
        android:id="@+id/selamatdatang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/berandaatas"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="10dp"
        android:text="Selamat Datang"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/selamatdatanguser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selamatdatang"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="1dp"
        android:paddingHorizontal="10dp"
        android:text="Nama Lengkap"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/txttanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/berandaatas"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:paddingHorizontal="10dp"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txtjam"
        android:layout_below="@id/txttanggal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingHorizontal="10dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="1dp"
        android:text="@string/app_name"
        android:textSize="20dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/txtdonasi"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/selamatdatanguser"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/backgroundwhite"
        android:paddingHorizontal="10dp"
        android:paddingTop="63dp"
        android:text="DONASI"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="10dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/donasiicon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@id/selamatdatanguser"
        android:layout_marginLeft="73dp"
        android:layout_marginTop="75dp"
        android:background="@drawable/backgroundwhite"
        android:src="@drawable/donasiicon" />

    <TextView
        android:id="@+id/txtkalkulatorzakat"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/selamatdatanguser"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@id/txtdonasi"
        android:background="@drawable/backgroundwhite"
        android:paddingHorizontal="10dp"
        android:paddingTop="58dp"
        android:text="KALKULATOR ZAKAT"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="10dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/kalkulatorzakaticon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@id/selamatdatanguser"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="70dp"
        android:layout_toRightOf="@id/txtdonasi"
        android:src="@drawable/calculatoricon" />

    <TextView
        android:id="@+id/txttentang"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/selamatdatanguser"
        android:layout_toRightOf="@id/txtkalkulatorzakat"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/backgroundwhite"
        android:textAlignment="center"
        android:paddingHorizontal="10dp"
        android:paddingTop="65dp"
        android:text="TENTANG"
        android:textColor="@color/black"
        android:textSize="10dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/tentangicon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@id/selamatdatanguser"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="75dp"
        android:layout_toRightOf="@id/txtkalkulatorzakat"
        android:src="@drawable/tentangicon" />

    <TextView
        android:id="@+id/txtprogram"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/txtdonasi"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/backgroundwhite"
        android:paddingHorizontal="10dp"
        android:paddingTop="63dp"
        android:textAlignment="center"
        android:text="PROGRAM"
        android:textColor="@color/black"
        android:textSize="10dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/programicon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@id/txtdonasi"
        android:layout_marginLeft="73dp"
        android:layout_marginTop="75dp"
        android:src="@drawable/programicon" />

    <TextView
        android:id="@+id/txtlayanan"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/txtkalkulatorzakat"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@id/txtdonasi"
        android:background="@drawable/backgroundwhite"
        android:textAlignment="center"
        android:paddingHorizontal="10dp"
        android:paddingTop="63dp"
        android:text="LAYANAN"
        android:textColor="@color/black"
        android:textSize="10dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/layananicon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@id/txtkalkulatorzakat"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="70dp"
        android:layout_toRightOf="@id/txtprogram"
        android:src="@drawable/layananicon" />

    <TextView
        android:id="@+id/txtbantuan"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/txttentang"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@id/txtlayanan"
        android:background="@drawable/backgroundwhite"
        android:paddingHorizontal="10dp"
        android:paddingTop="65dp"
        android:text="BANTUAN"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="10dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/bantuanicon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@id/txttentang"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="75dp"
        android:layout_toRightOf="@id/txtlayanan"
        android:src="@drawable/bantuanicon" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomnavigator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/cardview_light_background"
        app:backgroundTint="@color/white"
        app:menu="@menu/menu" />

</RelativeLayout>