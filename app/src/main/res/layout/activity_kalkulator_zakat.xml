<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundorange2normal"
    tools:context=".KalkulatorZakat">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/bottomnavigator">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <RelativeLayout
                android:id="@+id/kalkulatorzakatatas"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/laziskalkulatorzakat"
                    android:layout_width="109dp"
                    android:layout_height="69dp"
                    android:layout_marginVertical="3dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/lazismukabpekalonganicon" />

                <TextView
                    android:id="@+id/judulkalkulatorzakat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@id/txttanggal"
                    android:layout_toRightOf="@id/laziskalkulatorzakat"
                    android:fontFamily="sans-serif"
                    android:text="KALKULATOR ZAKAT"
                    android:textAlignment="center"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="23dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txttanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:paddingHorizontal="10dp"
                    android:text="@string/app_name"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txtjam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txttanggal"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="10dp"
                    android:paddingHorizontal="10dp"
                    android:text="@string/app_name"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="15dp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/txtzakatpenghasilan"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_below="@id/kalkulatorzakatatas"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/backgroundwhite"
                android:paddingHorizontal="10dp"
                android:paddingTop="58dp"
                android:text="ZAKAT PENGHASILAN"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="10dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/zakatpenghasilanicon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_below="@id/kalkulatorzakatatas"
                android:layout_marginLeft="73dp"
                android:layout_marginTop="73dp"
                android:background="@drawable/backgroundwhite"
                android:src="@drawable/zakatpenghasilanicon" />

            <TextView
                android:id="@+id/txtzakatperdagangan"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_below="@id/kalkulatorzakatatas"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="60dp"
                android:layout_toRightOf="@id/txtzakatpenghasilan"
                android:background="@drawable/backgroundwhite"
                android:paddingHorizontal="8dp"
                android:paddingTop="58dp"
                android:text="ZAKAT \tPERDAGANGAN"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="10dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/zakatperdaganganicon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_below="@id/kalkulatorzakatatas"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="70dp"
                android:layout_toRightOf="@id/txtzakatpenghasilan"
                android:src="@drawable/zakatperdaganganicon" />

            <TextView
                android:id="@+id/txtzakatemasperak"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_below="@id/kalkulatorzakatatas"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="60dp"
                android:layout_toRightOf="@id/txtzakatperdagangan"
                android:background="@drawable/backgroundwhite"
                android:paddingHorizontal="10dp"
                android:paddingTop="58dp"
                android:text="ZAKAT EMAS DAN PERAK"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="10dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/zakatemasperakicon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_below="@id/kalkulatorzakatatas"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="70dp"
                android:layout_toRightOf="@id/txtzakatperdagangan"
                android:src="@drawable/zakatemasperakicon" />

            <TextView
                android:id="@+id/txtzakatpertanian"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_below="@id/txtzakatpenghasilan"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/backgroundwhite"
                android:paddingHorizontal="10dp"
                android:paddingTop="58dp"
                android:text="ZAKAT PERTANIAN"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="10dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/zakatpertanianicon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_below="@id/txtzakatpenghasilan"
                android:layout_marginLeft="73dp"
                android:layout_marginTop="70dp"
                android:src="@drawable/zakatpertanianicon" />

            <TextView
                android:id="@+id/txtzakattabungan"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_below="@id/txtzakatperdagangan"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="60dp"
                android:layout_toRightOf="@id/txtzakatpertanian"
                android:background="@drawable/backgroundwhite"
                android:paddingHorizontal="10dp"
                android:paddingTop="58dp"
                android:text="ZAKAT TABUNGAN"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="10dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/zakattabunganicon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_below="@id/txtzakatperdagangan"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="70dp"
                android:layout_toRightOf="@id/txtzakatpertanian"
                android:src="@drawable/zakattabunganicon" />

            <TextView
                android:id="@+id/txtzakatsaham"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_below="@id/txtzakatemasperak"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="60dp"
                android:layout_toRightOf="@id/txtzakattabungan"
                android:background="@drawable/backgroundwhite"
                android:paddingHorizontal="10dp"
                android:paddingTop="58dp"
                android:text="ZAKAT SAHAM"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="10dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/zakatsahamicon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_below="@id/txtzakatemasperak"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="70dp"
                android:layout_toRightOf="@id/txtzakattabungan"
                android:src="@drawable/zakatsahamicon" />

        </RelativeLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomnavigator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_light_background"
        app:backgroundTint="@color/white"
        app:menu="@menu/menu"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>