<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F49F36"
    tools:context=".KalkulatorZakat">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/bottomnavigator">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <RelativeLayout
                android:id="@+id/kalkulatorzakatatas"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/kembalikalkulator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/kembaliicondark" />>

                <TextView
                    android:id="@+id/judulkalkulatorzakat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="sans-serif"
                    android:text="KALKULATOR ZAKAT"
                    android:textAlignment="center"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="23dp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <TextView
                android:id="@+id/txtzakatpenghasilan"
                android:layout_width="350dp"
                android:layout_height="90dp"
                android:layout_below="@id/kalkulatorzakatatas"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/backgroundwhite"
                android:paddingLeft="10dp"
                android:paddingTop="30dp"
                android:text="ZAKAT PENGHASILAN"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/zakatpenghasilanicon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/kalkulatorzakatatas"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="73dp"
                android:layout_marginRight="53dp"
                android:background="@drawable/backgroundwhite"
                android:src="@drawable/zakatpenghasilanicon" />

            <TextView
                android:id="@+id/txtzakatperdagangan"
                android:layout_width="350dp"
                android:layout_height="90dp"
                android:layout_below="@id/txtzakatpenghasilan"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/backgroundwhite"
                android:paddingLeft="10dp"
                android:paddingTop="30dp"
                android:text="ZAKAT PERDAGANGAN"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/zakatperdaganganicon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/txtzakatpenghasilan"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="43dp"
                android:layout_marginRight="53dp"
                android:background="@drawable/backgroundwhite"
                android:src="@drawable/zakatperdaganganicon" />

            <TextView
                android:id="@+id/txtzakatemasperak"
                android:layout_width="350dp"
                android:layout_height="90dp"
                android:layout_below="@id/txtzakatperdagangan"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/backgroundwhite"
                android:paddingHorizontal="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="30dp"
                android:text="ZAKAT EMAS DAN PERAK"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/zakatemasperakicon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/txtzakatperdagangan"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="43dp"
                android:layout_marginRight="53dp"
                android:background="@drawable/backgroundwhite"
                android:src="@drawable/zakatemasperakicon" />

            <TextView
                android:id="@+id/txtzakatpertanian"
                android:layout_width="350dp"
                android:layout_height="90dp"
                android:layout_below="@id/txtzakatemasperak"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/backgroundwhite"
                android:paddingLeft="10dp"
                android:paddingTop="30dp"
                android:text="ZAKAT PERTANIAN"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/zakatpertanianicon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/txtzakatemasperak"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="43dp"
                android:layout_marginRight="53dp"
                android:background="@drawable/backgroundwhite"
                android:src="@drawable/zakatpertanianicon" />

            <TextView
                android:id="@+id/txtzakattabungan"
                android:layout_width="350dp"
                android:layout_height="90dp"
                android:layout_below="@id/txtzakatpertanian"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/backgroundwhite"
                android:paddingLeft="10dp"
                android:paddingTop="30dp"
                android:text="ZAKAT TABUNGAN"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/zakattabunganicon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/txtzakatpertanian"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="43dp"
                android:layout_marginRight="53dp"
                android:background="@drawable/backgroundwhite"
                android:src="@drawable/zakattabunganicon" />

            <TextView
                android:id="@+id/txtzakatsaham"
                android:layout_width="350dp"
                android:layout_height="90dp"
                android:layout_below="@id/txtzakattabungan"
                android:layout_marginHorizontal="30dp"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="30dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/backgroundwhite"
                android:paddingLeft="10dp"
                android:paddingTop="30dp"
                android:text="ZAKAT SAHAM"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/zakatsahamicon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/txtzakattabungan"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="43dp"
                android:layout_marginRight="53dp"
                android:background="@drawable/backgroundwhite"
                android:src="@drawable/zakatsahamicon" />

        </RelativeLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomnavigator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_light_background"
        app:backgroundTint="@color/white"
        app:menu="@menu/menu"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>